<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <ul class="cart__item-list">
                    <% products.forEach(p=> { %>
                        <li class="cart__item">
                            <h1>
                                <%= p.productID.title %>
                            </h1>
                            <h2>Quantity: <%= p.quantity %>
                            </h2>
                        </li>
                        <% }) %>
                </ul>
                <div class="centered">
                    <h2> Total: <%= totalPrice %>
                    </h2>
                </div>
                <div class="centered">
                    <button id="order-btn" class="btn" type="submit">Order Now</button>
                    <script src="https://js.stripe.com/v3/"></script>
                    <script>
                        var stripe = Stripe('pk_test_51JDEh7Dp9HiZzPjXQ8Sl14csvW2SFmyIwEYbXHKysHCTgjB6xTB7vqjV7NqzNUjBvSrYLCvPycf8VVsgwGMAvAxx00umup74ra');
                        var orderBtn = document.getElementById('order-btn');
                        orderBtn.addEventListener('click', function () {
                            stripe.redirectToCheckout({
                                sessionId: '<%= sessionID %>'
                            });
                        });
                    </script>
                </div>
            </main>
            <%- include('../includes/end.ejs') %>